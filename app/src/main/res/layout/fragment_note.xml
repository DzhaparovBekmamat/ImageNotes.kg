<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC"
    tools:context=".userInterface.fragment.note.NoteFragment">

    <Button
        android:id="@+id/button_fragment_note"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/left"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/title_note_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:background="@drawable/edit_text_shape"
        android:drawableStart="@drawable/title"
        android:drawablePadding="10dp"
        android:fontFamily="@font/italic"
        android:hint="Название"
        android:padding="10dp"
        android:textColor="@color/brown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/description_note_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_shape"
        android:drawableStart="@drawable/description"
        android:drawablePadding="10dp"
        android:fontFamily="@font/italic"
        android:hint="Описание"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/brown"
        app:layout_constraintTop_toBottomOf="@id/title_note_fragment" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_note_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_shape_note"
        android:fontFamily="@font/italic"
        android:text="Добавить"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/description_note_fragment" />


</androidx.constraintlayout.widget.ConstraintLayout>